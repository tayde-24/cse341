{
  "swagger": "2.0",
  "info": {
    "title": "Contact API",
    "description": "Contact API",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/contacts/": {
      "get": {
        "description": "It gets all the contacts from the MongoDB.",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK: Got all contacts from database."
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "description": "You can add a new contact. This will be pushed into the MongoDB.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "firstName": {
                  "example": "any"
                },
                "lastName": {
                  "example": "any"
                },
                "email": {
                  "example": "any"
                },
                "favoriteColor": {
                  "example": "any"
                },
                "birthday": {
                  "example": "any"
                },
                "favoriteBook": {
                  "example": "any"
                },
                "favoriteNumber": {
                  "example": "any"
                },
                "favoriteApostle": {
                  "example": "any"
                },
                "schoolMajor": {
                  "example": "any"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created: Confirmation and returns contact's id number in response body."
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/contacts/{id}": {
      "get": {
        "description": "It returns one contact from the MongoDB.",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK: Returned a specific contact"
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "put": {
        "description": "You can adjust the contact information and the changes will be made in the MongoDB.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "firstName": {
                  "example": "any"
                },
                "lastName": {
                  "example": "any"
                },
                "email": {
                  "example": "any"
                },
                "favoriteColor": {
                  "example": "any"
                },
                "birthday": {
                  "example": "any"
                },
                "favoriteBook": {
                  "example": "any"
                },
                "favoriteNumber": {
                  "example": "any"
                },
                "favoriteApostle": {
                  "example": "any"
                },
                "schoolMajor": {
                  "example": "any"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content: Made updates"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "description": "You can delete a specific contact from the MongoDB.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK: Deleted contact"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}